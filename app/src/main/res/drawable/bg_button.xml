<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#b70c0c" />
            <stroke
                android:width="1dp"
                android:color="#820000" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#FFF" />
            <stroke
                android:width="1dp"
                android:color="#009688" />
            <corners
                android:radius="7dp" />
        </shape>
    </item>
</selector>